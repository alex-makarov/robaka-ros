<launch>
 
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find robaka)/conf/navigation/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find robaka)/conf/navigation/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find robaka)/conf/navigation/map_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find robaka)/conf/navigation/map_nav_params/global_costmap_params.yaml" command="load" />
    
    <rosparam file="$(find robaka)/conf/navigation/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find robaka)/conf/navigation/move_base_params.yaml" command="load" />
    
    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <!-- <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/> -->
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    
    <remap from="odom" to="odometry/filtered" />
  </node>

</launch>
